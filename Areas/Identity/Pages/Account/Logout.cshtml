    @page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn custom-logout-btn">Click here to confirm log out</button>
                <button type="button" class="nav-link btn custom-logout-btn" style="margin-top: 16px;" onclick="window.location.href='/Identity/Account/Home';">Cancel Log out</button>
            </form>

        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
